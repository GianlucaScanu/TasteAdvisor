<p style="color: green"><%= notice %></p>

<%= render @dish %>

<%= link_to "Back to dishes", dishes_path %>

<%if restaurant_signed_in? %>
  <%if current_restaurant.id == @dish.restaurant_id%>
    <div>
      <%= link_to "Edit this dish", edit_dish_path(@dish) %> 
      <%= button_to "Destroy this dish", @dish, method: :delete %>
    </div>
  <%end%>
<%end%>

<br><p>--------------</p> 
<%#counter risulta come stringa...%>
<%@counter = 0.to_s%>

<%if reviewer_signed_in? %>
  <div id="dishes">
    LISTA RECENSIONI: <br>
    <p>--------------</p> 
    
    RECENSIONI DI ALTRI UTENTI:<br>
    <% (Review.all).each do |review| %>
      <%if @dish.id == review.dish_id  && review.reviewer_id != current_reviewer.id%>
        <%= render review %>
        <p>--------------</p>
      <%end%>
    <% end %>

    
    <% (Review.all).each do |review| %>
      <%if @dish.id == review.dish_id  && review.reviewer_id == current_reviewer.id%>
        LA TUA RECENSIONE:<br>
        <%@counter = 1.to_s%>
        <%= render review %>
        <%= link_to "Edit this review", edit_review_path(review) %>
        <%= button_to "Destroy this review", review, method: :delete %>
        <p>--------------</p>
      <%end%>
    <% end %>

    <p>--------------</p>

  <%if @counter == 0.to_s%>
    <%= link_to "CREA NUOVA RECENSIONE", new_review_path %><br>
  <%end%>
    
  <p> <%#= link_to "Show this dish", @dish %> </p> 

  </div>

<%end%>
