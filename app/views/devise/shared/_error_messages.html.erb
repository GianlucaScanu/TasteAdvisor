<% if resource.errors.any? %>
  <%#non vogliamo stampare degli errori%>
  <%if resource.errors.full_messages.first != "Email can't be blank"%>
    <div id="error_explanation">
      <h2>
        <%= "Errore reset password"%>
        <%#= resource.class.model_name.human.downcase.to_s%>
      </h2>
      <ul>
        <% resource.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <%end%>
<% end %>
